<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-5 mb-3 rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Name of Category" %>
          </div>
        </div>
        <br/>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= link_to '[ Cancel and return to categories listing ]', categories_path, class:"text-dark" %>
    </div>
  </div>
</div>