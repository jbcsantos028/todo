<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @task %>
      <%= form_with(model: @task, class: "shadow p-5 mb-3 rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of Task" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :detail, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :detail, rows: 10, class: "form-control shadow rounded", placeholder: "Details of Task" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :due_date, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.date_field :due_date, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.collection_select(:category_id, current_user.categories, :id, :title,
            {}, { class: "custom-select shadow rounded" }) %> 
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :completed, "Completed?", class: "col-2 col-form-label " %>
          <div class="col-10">
            <%= f.check_box :completed, class: "form-control rounded col-1" %>
          </div>
        </div>

        <br/>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= link_to '[ Cancel and return to tasks listing ]', tasks_path, class:"text-dark" %>
    </div>
  </div>
</div>