<h2 class="text-center mt-4"><%= @task.name %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          Due on: <%=@task.due_date %> | Status: <%= @task.completed ? "Completed" : "Not completed" %>
          <div class="mt-2"><%= link_to @task.category.title, category_path(@task.category), class: "badge badge-pill badge-secondary" %></div>
        </div>
        <div class="card-body">
          <div class="card-text"><%= simple_format(@task.detail) %></div>
          <%= link_to "Edit", edit_task_path(@task), class: "btn btn-dark" %>
          <%= link_to "Delete", task_path(@task), class: "btn btn-danger", method: :delete, data: {confirm: "Do you want to proceed in deleting the task?"} %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@task.created_at) %> ago,
          edited <%= time_ago_in_words(@task.updated_at) %> ago</small>
        </div>
        </div>
      </div>
  </div>
</div>
